<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_back"
    android:orientation="vertical" >

    <!--  -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/nav_bkgrd" >

        <Button
            android:id="@+id/addback"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@drawable/nav_ic_bk_norm"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/addback"
            android:layout_toLeftOf="@+id/tasktitlepanel_rightBtn"
            android:gravity="center"
            android:text=""
            android:textSize="16sp" />

        <Button
            android:id="@+id/tasktitlepanel_rightBtn"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/submittijiao"
            android:background="@null" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/listtitle_lace"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:background="@null" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <!-- 打开这个界面的时候，率先让这个layout获得焦点 -->

    <ScrollView
        android:id="@+id/dataPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <wa.android.nc631.commonform.CommonFormLayout
            android:id="@+id/cf_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </wa.android.nc631.commonform.CommonFormLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/nodataPanel"
        android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#f0f0f0"
            android:gravity="center"
            android:visibility="gone"
          >
            <!--      android:background="@drawable/empty_view" -->
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:textColor="#8f8f8f"
                android:textSize="12sp"
    			android:text="@string/nodataonpanel"
                android:gravity="center" />
        </LinearLayout>

</LinearLayout>