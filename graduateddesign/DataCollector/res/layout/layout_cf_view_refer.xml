<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="@dimen/cf_field_padding" >

    <LinearLayout
        android:id="@+id/cfViewNamelayout"
        android:layout_width="@dimen/cf_field_prompt_size"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/requiredfields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/cell_ic_requiredfields"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/cfViewName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/list_text_black"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cf_view_right_array"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/detail_row_arrow" />

    <ImageView
        android:id="@+id/cf_view_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/cell_ic_clean"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cf_view_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/cf_view_delete"
        android:layout_toRightOf="@id/cfViewNamelayout"
        android:background="@null"
        android:gravity="right"
        android:paddingLeft="@dimen/cf_field_padding"
        android:singleLine="true"
        android:textColor="#688fdf"
        android:textSize="14sp" />

</RelativeLayout>