<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right" >
    
    <ImageView
            android:id="@+id/requiredfields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/cell_ic_requiredfields"
            android:visibility="invisible" />

    <TextView
        android:id="@+id/cfViewName"
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/verticalline"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="地址"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/verticalline"
        android:layout_width="1dp"
        android:layout_height="198dp"
        android:layout_toLeftOf="@+id/addressContent"
        android:background="@drawable/vertical_separator" >
    </TextView>

    <LinearLayout
        android:id="@+id/addressContent"
        android:layout_width="240dp"
        android:layout_height="198dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/country"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="right|center_vertical"
                android:hint="国家"
                android:textColor="#b0b0b0"
                android:textSize="@dimen/cf_field_text_size" >
            </TextView>

            <ImageView
                android:id="@+id/countryimage"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:src="@drawable/detail_row_arrow" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/vertical_separator" >
            </TextView>

            <TextView
                android:id="@+id/state"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="right|center_vertical"
                  android:textColor="#b0b0b0"
                android:hint="省"
                android:textSize="@dimen/cf_field_text_size" >
            </TextView>

            <ImageView
                android:id="@+id/provinceimage"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:src="@drawable/detail_row_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/wadetail_row_separator" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/city"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="right|center_vertical"
                  android:textColor="#b0b0b0"
                android:hint="市"
                android:textSize="@dimen/cf_field_text_size" >
            </TextView>

            <ImageView
                android:id="@+id/cityimage"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:src="@drawable/detail_row_arrow" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/vertical_separator" >
            </TextView>

            <TextView
                android:id="@+id/area"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="right|center_vertical"
                  android:textColor="#b0b0b0"
                android:hint="区/县"
                android:textSize="@dimen/cf_field_text_size" >
            </TextView>

            <ImageView
                android:id="@+id/areaimage"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:src="@drawable/detail_row_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/wadetail_row_separator" >
        </TextView>

        <EditText
            android:id="@+id/addressno"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="街道门牌号"
              android:textColor="#b0b0b0"
            android:singleLine="true"
            android:textSize="@dimen/cf_field_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/wadetail_row_separator" >
        </TextView>

        <EditText
            android:id="@+id/mailcode"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="邮政编码"
            android:singleLine="true"
            android:textSize="@dimen/cf_field_text_size" />
    </LinearLayout>

</RelativeLayout>