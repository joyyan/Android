<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/comboforward_titlepanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_title_bg"
        android:gravity="left" >

        <Button
            android:id="@+id/title_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:paddingBottom="1dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/back"
        	android:background="@drawable/common_button_title_back"
            />

        <Button
            android:id="@+id/comboforward_cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/common_button"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/commonFontSizeLittle" />
    </RelativeLayout>

    <ListView
        android:id="@+id/comboforward_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comboforward_titlepanel" >
    </ListView>

</RelativeLayout>